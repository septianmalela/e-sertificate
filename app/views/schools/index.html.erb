<div class="container pt-5">
  <h4>List Sekolah</h4>
  <% if notice.present? %>
    <div class="alert alert-primary" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <% if alert.present? %>
    <div class="alert alert-danger" role="alert">
      <%= alert %>
    </div>
  <% end %>

  <div class="pt-2">
    <%= render "form", school: @school %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">No</th>
        <th scope="col">Nama Sekolah</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <%= no_table_record(@schools, '3') %>
    <tbody>
      <% @schools.each_with_index do |school, idx| %>
        <%= render partial: 'schools/school', locals: { school: school, idx: idx } %>
      <% end %>
    </tbody>
  </table>
</div>

<!-- Modal -->
<div id="show-modal"></div>